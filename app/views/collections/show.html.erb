<%= render "layouts/action_notifications", notifications: action_notification_props %>

<%= render "editable_name_heading", collection: @collection %>

<ul class="collections-show__action-bar icon-tray" data-id="<%= @collection.synthetic_id %>">
  <li tabindex="0" class="collections-show__action-bar-item collections-show__action-bar-item--back icon-tray__item">
    <%= link_to(collections_path) do %>
      <%= inline_svg_tag("icons/arrow-thick-left.svg", height: "24px", width: "24px") %>
    <% end %>
  </li>
  <li tabindex="0" class="collections-show__action-bar-item collections-show__action-bar-item--delete icon-tray__item">
    <%= inline_svg_tag("icons/trash.svg", height: "24px", width: "24px") %>
  </li>
  <li tabindex="0" class="collections-show__action-bar-item collections-show__action-bar-item--share icon-tray__item">
    <%= inline_svg_tag("icons/share.svg", height: "24px", width: "24px") %>
  </li>
</ul>


<%= render "shared/photo_count", photo_count: @photo_count %>

<%#-
  NOTE: The logic in `remove_from_collection.jsx` will update this div's value to be blank
  if the date_range_label is NULL, which conflicts with this logic to not display it at all
%>
<% if @date_range_label %>
<div class="collections-show__date-range">
  <%= @date_range_label %>
</div>
<% end %>

<% if @photo_count.zero? %>
<div class="collections-show__emtpy-state">
  <%= t(".empty") %>
</div>
<% else %>
<div class="collections-show__photo-manager-container photo-manager-container page-content">
  <%=
    react_component(
      "photo-manager",
      {
        photoData: PhotoPresenter.wrap(@photos, view: view_context).map(&:photo_manager_props),
        currentCollection: CollectionPresenter.new(@collection, view: view_context).photo_manager_props,
        collections: CollectionPresenter.wrap(@collections, view: view_context).map(&:photo_manager_props)
      }
    )
  %>
</div>
<% end %>
