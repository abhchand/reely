<h1 class="page-heading">
  <%= @collection.name %>
</h1>

<%= render "shared/photo_count", photo_count: @photo_count %>

<% if @date_range_label %>
<div class="collections-sharing-display-show__date-range">
  <%= @date_range_label %>
</div>
<% end %>

<% if @photo_count.zero? %>
<div class="collections-sharing-display-show__emtpy-state">
  <%= t(".empty") %>
</div>
<% else %>
<div class="collections-sharing-display-show__photo-grid-container photo-grid-container page-content">
  <%=
    react_component(
      "photo-grid",
      { photoData: PhotoPresenter.wrap(@photos, view: view_context).map(&:photo_grid_props) }
    )
  %>
</div>
<% end %>
